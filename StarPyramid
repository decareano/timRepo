public class Edureka { 
   
   public static void main(String[] args) {
     
         
        pyramidPattern(5); 
    } 
    
    public static void pyramidPattern(int n) { 
       int i, j;
       for (i=0; i<n; i++) {
             for (j=n-i; j>1; j-- ) { 
                System.out.print("S"); 
            } 
            for (j=0;j<=i;j++) {
                System.out.print("* ");
            }
            System.out.println(); //ending line after each row
       }
    }
} 
